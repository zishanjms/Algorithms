<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd" [
<!ENTITY contextInclude SYSTEM "org/springframework/web/context/WEB-INF/contextInclude.xml">
]>

<beans>
<bean id="triangle" class="org.zishan.java.initializingCollections.Triangle" >
<property name="pointList">
<list>
<ref bean="point1"/>
<ref bean="point2"/>
<ref bean="point3"/>
</list>
</property>
</bean>

<bean id="point1" class="org.zishan.java.initializingCollections.Point">
<property name="x" value="20"/>
<property name="y" value="20"/>
</bean>

<bean id="point2" class="org.zishan.java.initializingCollections.Point">
<property name="x" value="-20"/>
<property name="y" value="0"/>
</bean>

<bean id="point3" class="org.zishan.java.initializingCollections.Point">
<property name="x" value="20"/>
<property name="y" value="0"/>
</bean>


</beans>